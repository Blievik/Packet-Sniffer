from scapy.all import sniff, IP, TCP, UDP, ICMP

def packet_callback(packet):
    if IP in packet:
        src_ip = packet[IP].src
        dst_ip = packet[IP].dst
        protocol = packet[IP].proto

        if TCP in packet:
            print(f"[TCP] {src_ip}:{packet[TCP].sport} → {dst_ip}:{packet[TCP].dport}")
        elif UDP in packet:
            print(f"[UDP] {src_ip}:{packet[UDP].sport} → {dst_ip}:{packet[UDP].dport}")
        elif ICMP in packet:
            print(f"[ICMP] {src_ip} → {dst_ip}")
        else:
            print(f"[Proto {protocol}] {src_ip} → {dst_ip}")

print("Starting packet sniffer... Press Ctrl+C to stop.\n")
sniff(prn=packet_callback, store=False)
